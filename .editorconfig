# EditorConfig for Janus
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rust source files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# Cargo configuration
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript/TypeScript (for tooling)
[*.{js,ts,mjs,cjs}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

[{*.mk,GNUmakefile,makefile}]
indent_style = tab
indent_size = 4

# Git files
[.git*]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

# Windows files
[*.{bat,cmd,ps1}]
end_of_line = crlf
indent_style = space
indent_size = 2
